<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="PrimaryButtonWarning" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="PrimaryButtonFacebook" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/blue_facebook</item>
    </style>

    <style name="SecondaryButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_marginTop">@dimen/space_between_content</item>
        <item name="android:layout_marginLeft">@dimen/space_between_content</item>
        <item name="android:layout_marginRight">@dimen/space_between_content</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>
